[Unit]
Description=NeonAI Enclosure Service
PartOf=neon.service
After=neon.service
After=neon-messagebus.service

[Service]
Restart=always
User=neon
Group=neon
WorkingDirectory=/opt/neon
ExecStart=/home/neon/venv/bin/neon_enclosure_client
Restart=on-failure
StandardOutput=append:/var/log/neon/enclosure.log
StandardError=file:/var/log/neon/enclosure.error.log

[Install]
WantedBy=neon.service